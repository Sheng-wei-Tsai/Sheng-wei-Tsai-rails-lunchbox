<h1>餐點列表</h1>

<%= link_to "新增",  new_item_path %> 
<%= link_to "分類", categories_path%>

<ul>
  <% @items.each do |item| %>
    <li>
      <%= link_to item.name, item_path(item.id)%>
      <%= item.category.name %>
      <%= link_to "修改", edit_item_path(item.id) %>
      <%= link_to "刪除", item_path(item.id), 
                  method: 'delete', data: { 
                  confirm: 'Are you Sure?'
                  } %>
    </li>
  <% end %>
</ul>


