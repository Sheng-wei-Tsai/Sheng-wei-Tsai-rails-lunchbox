<h1>餐點分類</h1>

<table>
  <thead>
    <tr>
      <th>名稱：</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to '編輯', edit_category_path(category) %></td>
        <td><%= link_to '刪除', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

