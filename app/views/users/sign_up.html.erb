<h1>使用者註冊</h1>
<%# 原本為 User.new 把它搬到 sign_up @user 才可以重複使用 %>
<%= form_for(@user, url: '/sign_up', method: 'post') do |f| %>

    <% if @user.errors.any? %>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <%end%>
      </ul>
    <% end%>
    <div>
      <%= f.label :email , "信箱"%>
      <%= f.text_field :email %>
    </div>
    <div> 
      <%= f.label :password , "密碼"%>
      <%= f.password_field :password %>     
    </div>
    <div>
      <%= f.label :password_confirm, "密碼確認"%> 
      <%= f.password_field :password_confirmation%>
    </div>

    <div>
      <%= f.submit "註冊"%>
    </div>
    
<%end%>

