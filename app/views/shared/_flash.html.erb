
<% if notice %>
  <div class="alert alert-success" role="alert" data-controller="flash" data-target="flash.message">
    <%= notice %>
    <button type="button" class="close" data-action="flash#close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

